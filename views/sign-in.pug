extends ./layouts/main
append styles
	link(href='/stylesheets/sign-in.css', rel='stylesheet')
block content
	.container
		form.form-signin
			h2.form-signin-heading Please Sign In
			label.sr-only(for='inputEmail') Email address
			input#inputEmail.form-control(type='email', placeholder='Email address', required=true, autofocus=true)
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password', placeholder='Password', required=true)
			.checkbox
				label
					input(type='checkbox', value='remember-me')
					|  Remember me
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign In
			button.btn.btn-lg.btn-default.btn-block(type='submit')
				i.fab.fa-google
					span Continue with Google
			a(href=routes.signup.href) Create an Account